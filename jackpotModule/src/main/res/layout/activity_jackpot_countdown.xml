<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_triangle_blue"
    android:gravity="center"
    android:fitsSystemWindows="false">

    <!-- Lottie Animation in center -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/countdown" />

    <!-- Countdown Number -->
    <TextView
        android:id="@+id/tvCountdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="72sp"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvStartingGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lottieView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="STARTING GAME..."
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:shadowColor="#FFEB3B"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="8"
        android:letterSpacing="0.05" />

</RelativeLayout>

