<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Curved reel background -->
    <gradient
        android:startColor="#dcdcdc"
        android:centerColor="#f5f5f5"
        android:endColor="#dcdcdc"
        android:angle="0" />

    <!-- Rounded edges -->
    <corners android:radius="12dp" />

    <!-- Slight shadow to create 3D feel -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <stroke
        android:width="2dp"
        android:color="#aaaaaa" />
</shape>
