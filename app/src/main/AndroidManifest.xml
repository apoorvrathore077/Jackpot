<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/jackpot_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/jackpot_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.JackPot">

        <activity
            android:name=".activity.DashboardActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".activity.GameActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name="com.playzelo.jackpotmodule.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:exported="true" />

        <activity
            android:name="com.playzelo.jackpotmodule.activity.DashboardActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.playzelo.jackpotmodule.activity.TournamentsActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.playzelo.jackpotmodule.activity.CountdownActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.playzelo.jackpotmodule.activity.GameActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.playzelo.jackpotmodule.activity.LoginActivity"
            android:screenOrientation="portrait"
            android:exported="false" />  <activity
        android:name="com.playzelo.jackpotmodule.activity.SignupActivity"
        android:screenOrientation="portrait"
        android:exported="false" />

    </application>

</manifest>